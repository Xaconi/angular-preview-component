{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2021",
		"outDir": "out/extension",
		"lib": [
			"es2021"
		],
		"sourceMap": true,
		"rootDir": ".",
		"strict": true,
		"strictPropertyInitialization": false,
		"skipLibCheck": true,
	},
	"include": ["src-ext/*"],
	"exclude": ["node_modules/*", ".vscode-test", ".vscode/*", ".angular/*"],
}
